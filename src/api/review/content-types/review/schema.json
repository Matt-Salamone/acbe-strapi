{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 300,
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "productName": {
      "type": "string",
      "required": true
    },
    "overallRating": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "max": 5
    },
    "prosAndCons": {
      "type": "json"
    },
    "priceRange": {
      "type": "string"
    },
    "difficulty": {
      "type": "enumeration",
      "required": true,
      "default": "beginner",
      "enum": [
        "beginner",
        "intermediate",
        "advanced"
      ]
    },
    "featured": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "seo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    },
    "affiliateLinks": {
      "type": "component",
      "component": "shared.affiliate-link",
      "repeatable": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "reviews"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "reviews"
    }
  }
}
